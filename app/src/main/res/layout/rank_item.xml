<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1. "
        android:id="@+id/rank_item_rank"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hari Prasaad Chaurasiya"
        android:id="@+id/rank_item_name"
        android:layout_alignBottom="@+id/rank_item_rank"
        android:layout_toEndOf="@+id/rank_item_rank"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="FED: ARM"
        android:id="@+id/rank_item_fed"
        android:layout_below="@+id/rank_item_name"
        android:layout_alignStart="@+id/rank_item_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="RTG: 2468"
        android:id="@+id/rank_item_rtg"
        android:layout_below="@+id/rank_item_name"
        android:layout_toEndOf="@+id/rank_item_fed"
        android:layout_alignTop="@+id/rank_item_fed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3.0"
        android:id="@+id/rank_item_pts"
        android:layout_alignTop="@+id/rank_item_name"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:visibility="gone"/>

</RelativeLayout>